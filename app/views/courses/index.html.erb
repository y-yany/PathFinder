<div class="container mx-auto pt-4 px-4">
  <h1><%= t('.title') %></h1>

  <!-- 検索フォーム -->
  <div class="mx-auto w-full max-w-md md:max-w-xl py-4">
    <%= render 'search_form', q: @q, url: courses_path %>
  </div>

  <!-- コース一覧 -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <% if @courses.present? %>
      <%= render @courses %>
    <% else %>
      <div class="mt-4">コースがありません</div>
    <% end %>
  </div>
</div>
