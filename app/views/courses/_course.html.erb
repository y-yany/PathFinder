<div id="course-id-<%= course.id %>">
  <div class="card card-compact bg-base-100 w-72 shadow-xl mb-3">
    <figure>
      <%= image_tag "course_placeholder.png", class: "rounded-xl", width: "300", height: "200" %>
    </figure>
    <div class="card-body">
      <h2 class="card-title"><%= link_to course.title, '#' %></h2>
      <ul class="flex space-x-1">
        <li class="bg-green-200 text-s py-1 px-2 rounded-full w-27 truncate">
          <%= course.distance %> km
        </li>
        <li class="bg-green-200 text-s py-1 px-2 rounded-full w-32 truncate">
          <%= course.address.split[1] %>
        </li>
      </ul>
      <p>ユーザー名：<%= course.user.name %></p>
    </div>
  </div>
</div>