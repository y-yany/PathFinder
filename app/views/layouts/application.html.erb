  </head>

  <body>
    <!-- ヘッダー -->
    <%= render user_signed_in? ? 'shared/header' : 'shared/before_login_header' %>

    <%# フラッシュメッセージ %>
    <%= render 'shared/flash_message' %>

    <%= yield %>

    <!-- フッター -->
    <div class="bottom-0 w-full">
      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
