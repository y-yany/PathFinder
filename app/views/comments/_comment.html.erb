<li>
  <div class="flex gap-2">
    <span class="material-icons text-4xl">account_circle</span>
    <div class="flex-col">
      <div class="flex items-end gap-2">
        <div class="flex flex-col">
          <div><%= comment.user.name %></div>
          <p class="text-xs font-semibold opacity-60"><%= l(comment.created_at, format: :short) %></p>
        </div>
        <% if current_user&.own?(comment) %>
          <%= link_to comment_path(comment), data: { turbo_method: :delete } do %>
            <span class="material-icons text-primary">delete</span>
          <% end %>
        <% end %>
      </div>
      <p class="text-md mt-2"><%= comment.body %></p>
    </div>
  </div>
  <div class="divider"></div>
</li>
