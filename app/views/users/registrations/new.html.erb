<div class="container mx-auto">
  <div class="flex flex-col items-center">
    <h1 class="mt-8 text-xl"><%= t('.title') %></h1>

    <div class="card w-5/6 max-w-sm shadow-2xl rounded-lg">
      <div class="card-body">

        <%# 新規登録用フォーム %>
        <%= form_with model: resource, url: registration_path(resource_name) do |f| %>
          <%= render "shared/error_messages", object: f.object %>

          <div class="mb-2">
            <%= f.label :name, class: "label" %>
            <%= f.text_field :name, autofocus: true, class: "input input-sm input-bordered w-full rounded-lg" %>
          </div>

          <div class="mb-2">
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, autocomplete: "email", class: "input input-sm input-bordered w-full rounded-lg" %>
          </div>

          <div class="mb-2">
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input input-sm input-bordered w-full rounded-lg" %>
          </div>

          <div class="mb-2">
            <%= f.label :password_confirmation, class: "label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-sm input-bordered w-full rounded-lg" %>
          </div>

          <%= f.submit t('.sign_up'), class: "btn w-full" %>
        <% end %>

        <%# ログインおよびgoogle認証へのリンク %>
        <div class="mt-2 text-center">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
