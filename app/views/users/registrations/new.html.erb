<div class="container mx-auto">
  <div class="grid grid-cols-1 gap-2 place-items-center">
    <h1><%= t('.title') %></h1>

    <%# フォーム %>
    <%= form_with model: resource, url: registration_path(resource_name) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="mb-3">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, autofocus: true, class: "input input-bordered" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autocomplete: "email", class: "input input-bordered" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered" %>
      </div>

      <div class="flex justify-center">
        <%= f.submit t('.sign_up'), class: "btn btn-accent" %>
      </div>
    <% end %>

    <%# ログインページへのリンク %>
    <%= render "users/shared/links" %>
  </div>
</div>
